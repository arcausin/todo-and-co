{% extends 'base.html.twig' %}

{% block title %}réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="text-center mt-5 mb-5">réinitialiser votre mot de passe</h1>

        <div class="col-12 col-md-6 offset-md-3">
            <div class="text-center border shadow rounded-4 p-4 mb-5">
                {{ form_start(resetForm) }}
                    <div class="form-group mb-3">
                        {{ form_label(resetForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label fs-3'}})}}
                        {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
                    </div>

                    <div class="form-group mb-4">
                        {{ form_label(resetForm.plainPassword.second, 'Confirmer le nouveau mot de passe', {'label_attr': {'class': 'form-label fs-3'}})}}
                        {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
                    </div>

                    <button class="btn btn-primary mb-3">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
