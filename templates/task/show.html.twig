{% extends 'base.html.twig' %}

{% block title %}{{ task.title }} - ToDo & Co{% endblock %}

{% block body %}
    <h1>{{ task.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>User</th>
                <td>{{ task.user }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ task.content }}</td>
            </tr>
            <tr>
                <th>Is_done</th>
                <td>{{ task.isDone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">retourner à la liste des tâches</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">modifier</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
